                  "pm.test('Instruments have required fields', function() {",
                  "    var json = pm.response.json();",
                  "    if (json.instruments.length > 0) {",
                  "        var instr = json.instruments[0];",
                  "        pm.expect(instr).to.have.property('figi');",
                  "        pm.expect(instr).to.have.property('ticker');",
                  "        pm.expect(instr).to.have.property('name');",
