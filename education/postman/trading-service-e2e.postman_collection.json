    {
      "name": "6. Idempotency Tests",
      "description": "Проверка идемпотентности: повторный запрос с тем же X-Idempotency-Key возвращает тот же результат",
      "item": [
        {
          "name": "Step 1: Create Order with Idempotency Key",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "// Генерируем уникальный ключ для теста",
                  "var idempotencyKey = 'e2e-test-' + Date.now() + '-' + Math.random().toString(36).substr(2, 9);",
                  "pm.collectionVariables.set('idempotencyKey', idempotencyKey);",
                  "console.log('Generated idempotency key:', idempotencyKey);"
                ],
                "type": "text/javascript"
              }
            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 201', function() {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test('Returns order_id', function() {",
                  "    var json = pm.response.json();",
                  "    pm.expect(json).to.have.property('order_id');",
                  "    pm.collectionVariables.set('idempotentOrderId', json.order_id);",
                  "    console.log('First request - order_id:', json.order_id);",
                  "});",
                  "",
                  "pm.test('No X-Idempotency-Key-Used header (first request)', function() {",
                  "    var header = pm.response.headers.get('X-Idempotency-Key-Used');",
                  "    pm.expect(header).to.be.oneOf([null, undefined, 'false']);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{accessToken}}"},
              {"key": "Content-Type", "value": "application/json"},
              {"key": "X-Idempotency-Key", "value": "{{idempotencyKey}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"figi\": \"{{testFigi}}\",\n    \"quantity\": 1,\n    \"direction\": \"BUY\",\n    \"type\": \"MARKET\"\n}"
            },
            "url": {
              "raw": "{{tradingBaseUrl}}/api/v1/orders",
              "host": ["{{tradingBaseUrl}}"],
              "path": ["api", "v1", "orders"]
            }
          }
        },
        {
          "name": "Step 2: Retry with SAME Idempotency Key",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 201 (cached response)', function() {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test('Returns SAME order_id (idempotent)', function() {",
                  "    var json = pm.response.json();",
                  "    var expectedOrderId = pm.collectionVariables.get('idempotentOrderId');",
                  "    ",
                  "    pm.expect(json.order_id).to.eql(expectedOrderId);",
                  "    console.log('Retry request - order_id:', json.order_id);",
                  "    console.log('Expected order_id:', expectedOrderId);",
                  "    console.log('✅ IDEMPOTENCY WORKS: Same order_id returned!');",
                  "});",
                  "",
                  "pm.test('X-Idempotency-Key-Used header is true', function() {",
                  "    var header = pm.response.headers.get('X-Idempotency-Key-Used');",
                  "    pm.expect(header).to.eql('true');",
                  "    console.log('X-Idempotency-Key-Used:', header);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{accessToken}}"},
              {"key": "Content-Type", "value": "application/json"},
              {"key": "X-Idempotency-Key", "value": "{{idempotencyKey}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"figi\": \"{{testFigi}}\",\n    \"quantity\": 1,\n    \"direction\": \"BUY\",\n    \"type\": \"MARKET\"\n}"
            },
            "url": {
              "raw": "{{tradingBaseUrl}}/api/v1/orders",
              "host": ["{{tradingBaseUrl}}"],
              "path": ["api", "v1", "orders"]
            }
          }
