{
  "info": {
    "name": "Auth Service Tests",
    "description": "Postman collection for Auth Service API testing",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://arch.homework/auth",
      "type": "string"
    },
    {
      "key": "sessionToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "userId",
      "value": "",
      "type": "string"
    },
    {
      "key": "accountId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "0. Health Check",
      "item": [
        {
          "name": "Health Check",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200', function() {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Service is healthy', function() {",
                  "    var json = pm.response.json();",
                  "    pm.expect(json.status).to.eql('healthy');",
                  "    pm.expect(json.service).to.eql('auth-service');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            }
          }
        }
      ]
    },
    {
      "name": "1. Registration",
      "item": [
        {
          "name": "Register New User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 201', function() {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test('User ID returned', function() {",
                  "    var json = pm.response.json();",
                  "    pm.expect(json.user_id).to.not.be.empty;",
                  "    pm.collectionVariables.set('userId', json.user_id);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"username\": \"newuser_{{$timestamp}}\",\n    \"email\": \"newuser_{{$timestamp}}@example.com\",\n    \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "auth", "register"]
            }
          }
        },
        {
          "name": "Register Duplicate Username",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 409 Conflict', function() {",
                  "    pm.response.to.have.status(409);",
                  "});",
                  "",
                  "pm.test('Error message', function() {",
                  "    var json = pm.response.json();",
                  "    pm.expect(json.error).to.include('already exists');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"username\": \"testuser\",\n    \"email\": \"different@example.com\",\n    \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "auth", "register"]
            }
          }
        }
      ]
    },
    {
      "name": "2. Login",
      "item": [
        {
          "name": "Login with Test User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200', function() {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Session token returned', function() {",
                  "    var json = pm.response.json();",
                  "    pm.expect(json.session_token).to.not.be.empty;",
                  "    pm.collectionVariables.set('sessionToken', json.session_token);",
                  "    pm.collectionVariables.set('userId', json.user_id);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"username\": \"testuser\",\n    \"password\": \"test123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "auth", "login"]
            }
          }
        },
        {
          "name": "Login with Wrong Password",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 401 Unauthorized', function() {",
                  "    pm.response.to.have.status(401);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"username\": \"testuser\",\n    \"password\": \"wrongpassword\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "auth", "login"]
            }
          }
        },
        {
          "name": "Login Unknown User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 401 Unauthorized', function() {",
                  "    pm.response.to.have.status(401);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"username\": \"unknownuser\",\n    \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "3. Token Validation",
      "item": [
        {
          "name": "Validate Valid Session Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200', function() {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Token is valid', function() {",
                  "    var json = pm.response.json();",
                  "    pm.expect(json.valid).to.be.true;",
                  "    pm.expect(json.user_id).to.not.be.empty;",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"token\": \"{{sessionToken}}\",\n    \"type\": \"session\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/auth/validate",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "auth", "validate"]
            }
          }
        },
        {
          "name": "Validate Invalid Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200', function() {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Token is invalid', function() {",
                  "    var json = pm.response.json();",
                  "    pm.expect(json.valid).to.be.false;",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"token\": \"invalid-token-12345\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/auth/validate",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "auth", "validate"]
            }
          }
        }
      ]
    },
    {
      "name": "4. Accounts",
      "item": [
        {
          "name": "Get Accounts (with seed account)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200', function() {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Has seed account', function() {",
                  "    var json = pm.response.json();",
                  "    pm.expect(json.accounts).to.be.an('array');",
                  "    pm.expect(json.accounts.length).to.be.at.least(1);",
                  "    ",
                  "    // Save first account ID",
                  "    if (json.accounts.length > 0) {",
                  "        pm.collectionVariables.set('accountId', json.accounts[0].account_id);",
                  "    }",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{sessionToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/accounts",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "accounts"]
            }
          }
        },
        {
          "name": "Create New Account",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 201', function() {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test('Account created', function() {",
                  "    var json = pm.response.json();",
                  "    pm.expect(json.account_id).to.not.be.empty;",
                  "    pm.expect(json.name).to.eql('New Sandbox');",
                  "    pm.expect(json.type).to.eql('SANDBOX');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{sessionToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"New Sandbox\",\n    \"type\": \"SANDBOX\",\n    \"tinkoff_token\": \"fake-token-123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/accounts",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "accounts"]
            }
          }
        },
        {
          "name": "Get Accounts Without Auth",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 401 Unauthorized', function() {",
                  "    pm.response.to.have.status(401);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/accounts",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "accounts"]
            }
          }
        }
      ]
    },
    {
      "name": "5. Logout",
      "item": [
        {
          "name": "Logout",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200', function() {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Logout successful', function() {",
                  "    var json = pm.response.json();",
                  "    pm.expect(json.success).to.be.true;",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{sessionToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/auth/logout",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "auth", "logout"]
            }
          }
        },
        {
          "name": "Validate After Logout (should fail)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200', function() {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Token is now invalid', function() {",
                  "    var json = pm.response.json();",
                  "    pm.expect(json.valid).to.be.false;",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"token\": \"{{sessionToken}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/auth/validate",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "auth", "validate"]
            }
          }
        }
      ]
    }
  ]
}
